<p id="notice"><%= notice %></p>

<div class="physician">
  <h2>Name:<%= @physician.name %></h2>
  <h3>Specialty: <%= @physician.specialty %></h3>
</div>
<hr>

<h3>Office Locations</h3>
<div class="location-table">
  <table class="blueTable">
    <tbody>
      <tr>
        <th>Street Address</th>
        <th>Zip Code</th>
        <th>Phone</th>
      </tr>
      <% @physician.offices.each do |office| %>
      <tr>
        <td><%= office.street_address %></td>
        <td><%= office.zip %></td>
        <td><%= office.phone %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<h3>Current Appointments</h3>
<div class="location-table">
  <table class="blueTable">
    <tbody>
      <tr>
        <th>Patient Name</th>
        <th>Date of Appointment</th>
      </tr>
      <% @physician.appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.patient.name %></td>
        <td><%= appointment.visit.strftime("%B %d, %Y %H:%M") %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'Edit', edit_physician_path(@physician) %> |
<%= link_to 'Back', physicians_path %>
